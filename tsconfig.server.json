{
  "extends": "./tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "rootDir": "."
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "server",
    "outDir": "dist",
    "target": "es2017",
    "isolatedModules": false,
    "noEmit": false,
    "noEmitOnError": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["next-env.d.ts", "node_modules"]
}
